generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserActionType {
  LOCK
  UNLOCK
  ENABLE
  DISABLE
  ADD_AUTHORITY
  REMOVE_AUTHORITY
}

enum Authority {
  COMMON
  EDITOR
  HELPER
  MODERATOR
  ADMIN
  ROOT
}

model UserAction {
  actionById Int
  targetId   Int

  reason  String?
  details String?
  action  UserActionType

  createdAt DateTime @default(now())

  @@id([actionById, targetId])
}

model User {
  id  Int    @id @default(autoincrement())
  uid String @unique @default(cuid())

  email          String  @unique @db.VarChar(150)
  name           String  @db.VarChar(55)
  username       String  @unique @db.VarChar(55)
  avatarURL      String?
  avatarFilePath String?
  bio            String?

  password      String
  enabled       Boolean     @default(true)
  locked        Boolean     @default(false)
  emailVerified Boolean     @default(false)
  social        Social[]
  authorities   Authority[]
  joinedAt      DateTime    @default(now())
  updatedAt     DateTime    @default(now()) @updatedAt
}

model Social {
  id Int @id @default(autoincrement())

  identifier String  @unique @db.VarChar(50)
  url        String
  details    String? @db.VarChar(30)

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Stack {
  id Int @id @default(autoincrement())

  name            String @unique @db.VarChar(55)
  slug            String @unique @db.VarChar(100)
  description     String
  metaDescription String @db.VarChar(220)

  enabled          Boolean  @default(true)
  createdByUserUid String
  createdAt        DateTime @default(now())
}

model ActionOnStack {
  actionByIud   Int
  targetStackId Int

  reason  String?
  details String?
  action  ActionOnStackType

  createdAt DateTime @default(now())

  @@id([actionByIud, targetStackId])
}

enum ActionOnStackType {
  ENABLE
  DISABLE
  EDIT
}
